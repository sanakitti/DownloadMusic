<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_margin="10dp"
    android:background="@drawable/cusomt_ll_player">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tv_name_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:lines="1"
            android:singleLine="true"
            android:text="Lady Gaga, BLACKPINK"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:30"
                android:textColor="#B1ADAD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#B1ADAD" />

            <TextView
                android:id="@+id/tv_time_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:38"
                android:textColor="#B1ADAD" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_play_and_pause"
        android:layout_width="56dp"

        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:foregroundGravity="center_vertical"
        android:padding="18dp"
        android:src="@drawable/ic_pause"
        android:tint="@color/colorBlue" />
</RelativeLayout>